 
<section>
  <div class="container">
    <div class="row">
      {{#each product}}
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <img src="../product-image/{{this._id}}.jpg" class="card-img-top" alt="..." height="200px" width="200px" style="padding: 50px;">
          <div class="card-body">
            <p class="card-text">{{this.name}}</p>
            <h5 class="card-title">{{this.category}}</h5>
            <p class="card-text">{{this.price}}</p>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>