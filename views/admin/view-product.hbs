 <section>
   <div class="container">
     <div class="row">
       <div class="col-md-3">
       <a href="/admin/add-product" class="btn btn-success mt-5 mb-3">Add products</a>
       </div>
      </div>
     <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product name</th>
      <th scope="col">Product price</th>
      <th scope="col">Product category</th>
      <th scope="col">Product Image</th>
      <th scope="col">More</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
       <td><img src="../product-image/{{this._id}}.jpg" style="width: 50px; height: 50px;" alt=""></td>
       <td>
         <div class="row">
                  <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
<a href="/admin/delete-product/{{this._id}}" class="btn btn-danger mb-2" onclick="return confirm('Are you want to delete {{this.name}} product (id:{{this._id}})')">Delete</a>
          </div> 
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
   </div>
 </section>